<h1><%= @event.name %></h1>
<%= form_for @event, url: court_event_path(court_id: params[:court_id], event_id: params[:id]) do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control'  %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :date %>
    <%= f.text_field :date, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :price_cents %>
    <%= f.text_field :price_cents, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :num_of_players %>
    <%= f.text_field :num_of_players, class: 'form-control' %>
  </div>

  <%= f.submit "Edit", class: 'btn btn-primary' %>
<% end %>


