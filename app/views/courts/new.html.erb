<div class="text-center">
  <div class="form-signin mt-5">
    <h3>New court</h3>

    <%= simple_form_for(@court) do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_field :description, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :address %>
        <%= f.text_field :address, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :court_type %>
        <%= f.text_field :court_type, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :capacity %>
        <%= f.text_field :capacity, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.input :photo, as: :file, class: 'form-control' %>
      </div>

      <%= f.submit class: 'btn btn-primary' %>
    <% end %>
  </div> <!-- END OF FORM SIGNIN -->
</div> <!-- END OF TEXT-CENTER -->

