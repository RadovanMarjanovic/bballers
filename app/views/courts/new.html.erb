<div class="container">
  <h1>New court</h1>

  <%= simple_form_for(@court) do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :address %>
    <%= f.text_field :address, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :court_type %>
    <%= f.text_field :court_type, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :capacity %>
    <%= f.text_field :capacity, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.input :photo, as: :file, class: 'form-control' %>
  </div>

  <%= f.submit class: 'btn btn-primary' %>
<% end %>
</div>
