<div class="lading-page">
  <div class="container">
      <div id="lading-page-text">
        <h1>BBallers</h1>
        <h3 class="mb-3">Find the best pickup game near you.</h3>
        <%= render "shared/searchbar" %>
      </div>
  </div>
</div>
<div class="map-display py-5">
  <div class="container">
    <h3 class="pb-3">Check courts on the map</h3>
    <div
    id="map"
    style="width: 100%;
    height: 600px;"
    data-markers="<%= @marker.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
    ></div>
  </div>
</div> <!-- END OF MAP DISPLAY -->

